<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#787878">

        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_alien_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="testestestestttesttes"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/playerImage"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/ratingPlayer"
            android:layout_width="233dp"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintStart_toEndOf="@id/playerImage"
            app:layout_constraintTop_toBottomOf="@id/playerName" />

        <EditText
            android:id="@+id/rateDesc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/ratingPlayer"
            android:hint="@string/give_some_feedback"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/sendRating"
            android:text="SEND RATING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rateDesc"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>